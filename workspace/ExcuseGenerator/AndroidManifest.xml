            android:name="com.example.excusegenerator.MainActivity"
            android:label="@string/app_name" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name="com.example.excusegenerator.Illness"
            android:label="@string/title_activity_illness" >
        </activity>
        <activity
            android:name="com.example.excusegenerator.Busy"
            android:label="@string/title_activity_busy" >
        </activity>
        <activity
            android:name="com.example.excusegenerator.UnrelatedImage"
            android:label="@string/title_activity_unrelated_image" >
        </activity>
    </application>

</manifest>
